#!/bin/bash -e

# Generate SECRET_KEY_BASE if not provided
if [ -z "$SECRET_KEY_BASE" ]; then
  export SECRET_KEY_BASE=$(ruby -rsecurerandom -e 'puts SecureRandom.hex(64)')
fi

# If running the rails server (via thrust or directly), run db:prepare
if [[ "$*" == *"server"* ]] && [ "$RAILS_ENV" = "production" ]; then
  echo "Running db:prepare..."
  ./bin/rails db:prepare
  echo "db:prepare complete"
fi

exec "${@}"
